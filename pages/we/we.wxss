/* 头部 */
.body {
  width: 100%;
  height: 100%;
}

.text1 {
  width: fit-content;
  height: 100rpx;
  margin: auto;
  margin-top: 25%;
  font-size: 60rpx;
}
.nologin{
  display: none;
}
.image1 {
  display: block;
  width: 220rpx;
  height: 220rpx;
  margin: auto;
  margin-top: 15%;
}

.body button {
  margin-top: 15%;
  background-color: #07c160;
  color: white;
}

.head {
  display: flex;
  padding: 15rpx 0;
  margin-left: 30rpx;
  margin-right: 40rpx;
  justify-content: space-between;
}

.head .pic {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
}

.head .title {
  font-size: 60rpx;
  margin-top: 10rpx;
}

.greet {
  color: #808080;
}

/* 第二部分 */
.money {
  display: flex;
  margin-top: 15rpx;
  justify-content: space-between;
}

.recharge {
  width: 38%;
  height: 130rpx;
  margin-left: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 3px 7px rgba(10, 16, 20, .24), 0 0 8px rgba(10, 16, 20, .12);
}

.balance {
  width: 38%;
  height: 130rpx;
  margin-right: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 3px 7px rgba(10, 16, 20, .24), 0 0 8px rgba(10, 16, 20, .12)
}

.two {
  display: flex;
}

.t {
  width: 50rpx;
  height: 50rpx;
}

.two view {
  margin-left: 20rpx;
  margin-top: 0rpx;
}

.num {
  display: flex;
  margin-left: 80rpx;
  margin-top: 15rpx;
  font-size: 50rpx;
  color: #ff6666;
}

/* 第三部分 */
.third {
  width: 90%;
  margin: auto;
  margin-top: 40rpx;
}

.t3 {
  display: flex;
  border-bottom: 1rpx solid #a6a6a6;
  font-size: 50rpx;
  margin-bottom: 55rpx;
  width: 100%;
  padding: 10rpx
}

.t3 image {
  width: 60rpx;
  height: 60rpx;
  margin-right: 30rpx;
}

.right {
  margin-left: auto
}

.t3 view {
  margin-top: -8rpx;
